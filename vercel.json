{
  "buildCommand": "cd frontend && npm install vite@5.4.14 @vitejs/plugin-react@4.3.4 --no-fund && npm run vercel-build",
  "installCommand": "echo 'Using direct npm install in build command'",
  "outputDirectory": "frontend/dist",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)\\.js",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript; charset=utf-8" }
      ]
    },
    {
      "source": "/(.*)\\.css",
      "headers": [
        { "key": "Content-Type", "value": "text/css; charset=utf-8" }
      ]
    },
    {
      "source": "/(.*\\.(png|jpg|jpeg|gif|webp|svg|ico))",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/assets/:path*", "destination": "/assets/:path*" },
    { "source": "/images/:path*", "destination": "/images/:path*" },
    { "source": "/static/:path*", "destination": "/static/:path*" },
    { "source": "^/admin(/.*)?$", "destination": "/index.html" },
    { "source": "^/$", "destination": "/admin" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "redirects": [
    { "source": "/", "destination": "/admin", "permanent": false }
  ],
  "env": {
    "SKIP_TYPESCRIPT_CHECK": "true",
    "VITE_API_URL": "https://charterhub-api.onrender.com",
    "VITE_PHP_API_URL": "https://charterhub-api.onrender.com",
    "NODE_ENV": "production"
  }
} 