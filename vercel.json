{
  "buildCommand": "cd frontend && npm install --no-package-lock --ignore-scripts && node build.js",
  "outputDirectory": "frontend/dist",
  "installCommand": "echo Skipping default install",
  "env": {
    "VITE_API_BASE_URL": "https://charterhub-api.onrender.com",
    "VITE_API_URL": "https://charterhub-api.onrender.com",
    "VITE_PHP_API_URL": "https://charterhub-api.onrender.com",
    "VITE_WP_API_URL": "",
    "VITE_USE_JWT": "true",
    "VITE_FRONTEND_URL": "https://app.charterhub.com",
    "SKIP_TYPESCRIPT_CHECK": "true",
    "TSC_COMPILE_ON_ERROR": "true",
    "VITE_SKIP_TS_CHECK": "true",
    "VERCEL": "1",
    "SKIP_POSTINSTALL": "1"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://charterhub-api.onrender.com/api/$1"
    },
    {
      "source": "/auth/(.*)",
      "destination": "https://charterhub-api.onrender.com/auth/$1"
    }
  ]
} 