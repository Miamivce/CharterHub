{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["frontend/dist/**"] }
    }
  ],
  "routes": [
    { "src": "/env-config.js", "dest": "/server.js" },
    { "src": "/redirect.js", "dest": "/server.js" },
    { "src": "/(.*)", "dest": "/server.js" }
  ],
  "headers": [
    {
      "source": "/(.*)\\.js",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript; charset=utf-8" }
      ]
    }
  ]
} 