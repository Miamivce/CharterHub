{
  "buildCommand": "cd frontend && npm install vite@5.4.14 @vitejs/plugin-react@4.1.1 cors express http-proxy-middleware --no-fund && npm run vercel-build",
  "installCommand": "cd frontend && npm install --no-fund",
  "framework": "vite",
  "outputDirectory": "frontend/dist",
  "trailingSlash": false,
  "cleanUrls": true,
  "headers": [
    {
      "source": "/env-config.js",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript; charset=utf-8" },
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    },
    {
      "source": "/redirect.js",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript; charset=utf-8" },
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    },
    {
      "source": "/csrf-helper.js",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript; charset=utf-8" },
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "X-Requested-With, Content-Type, Accept, X-CSRF-Token, Authorization, Origin, Cache-Control, Pragma, Expires" },
        { "key": "Access-Control-Max-Age", "value": "86400" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/assets/(.*)\\.js",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript; charset=utf-8" }
      ]
    },
    {
      "source": "/assets/(.*)\\.css",
      "headers": [
        { "key": "Content-Type", "value": "text/css; charset=utf-8" }
      ]
    },
    {
      "source": "/images/(.*)\\.png",
      "headers": [
        { "key": "Content-Type", "value": "image/png" }
      ]
    },
    {
      "source": "/images/(.*)\\.jpg",
      "headers": [
        { "key": "Content-Type", "value": "image/jpeg" }
      ]
    },
    {
      "source": "/images/(.*)\\.svg",
      "headers": [
        { "key": "Content-Type", "value": "image/svg+xml" }
      ]
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/env-config.js", "dest": "/env-config.js" },
    { "src": "/redirect.js", "dest": "/redirect.js" },
    { "src": "/csrf-helper.js", "dest": "/csrf-helper.js" },
    { "src": "/filetest.html", "dest": "/filetest.html" },
    { "src": "/service-worker.js", "dest": "/service-worker.js" },
    { "src": "/images/(.*)", "dest": "/images/$1" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/admin", "dest": "/index.html" },
    { "src": "/admin/(.*)", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "SKIP_TYPESCRIPT_CHECK": "true",
    "VITE_API_URL": "https://charterhub-api.onrender.com",
    "VITE_PHP_API_URL": "https://charterhub-api.onrender.com",
    "NODE_ENV": "production",
    "VITE_ALLOWED_ORIGINS": "https://charter-kn1eupp28-maurits-s-projects.vercel.app,https://app.yachtstory.be",
    "VITE_FRONTEND_URL": "https://charter-kn1eupp28-maurits-s-projects.vercel.app"
  }
} 