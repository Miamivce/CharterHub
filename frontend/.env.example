# CharterHub Frontend Environment Configuration

# API Configuration
VITE_API_URL=https://api.charterhub.com
VITE_PHP_API_URL=https://api.charterhub.com

# WordPress API Configuration
VITE_WP_API_URL=https://yachtstory.com/wp-json
VITE_WP_USERNAME=admin
VITE_WP_APP_PASSWORD=your_app_password_here

# Authentication Mode
VITE_USE_JWT=true

# Security Configuration
VITE_API_TIMEOUT=30000
VITE_MAX_RETRIES=3

# Environment
VITE_ENV=production

# CORS Configuration
VITE_ALLOWED_ORIGINS=https://charterhub.com

# Debug Settings
VITE_DEBUG=false
VITE_FRONTEND_URL=https://charterhub.com

# App Information
VITE_APP_NAME=CharterHub

# For local development, use these values:
# VITE_API_URL=http://localhost:8000
# VITE_PHP_API_URL=http://localhost:8000
# VITE_ENV=development
# VITE_ALLOWED_ORIGINS=http://localhost:3000
# VITE_DEBUG=true
# VITE_FRONTEND_URL=http://localhost:3000

# WordPress URL
VITE_WORDPRESS_URL=http://localhost:8888

# Authentication Settings
VITE_USE_MOCK_ADMIN_SERVICE=false
VITE_TOKEN_EXPIRY_DAYS=30
VITE_REFRESH_TOKEN_INTERVAL_MINUTES=15

# Feature Flags
VITE_ENABLE_ADMIN_LOGIN=true
VITE_ENABLE_CLIENT_LOGIN=true

# Log Level (debug, info, warn, error)
VITE_LOG_LEVEL=debug 