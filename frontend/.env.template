# Frontend Environment Variables for CharterHub
# Copy this file to .env and customize as needed

# API URL
VITE_API_URL=http://localhost:8000

# Development Mode
VITE_DEVELOPMENT_MODE=true

# Authentication
VITE_USE_JWT=true
VITE_JWT_EXPIRY_MINUTES=60
VITE_REFRESH_TOKEN_EXPIRY_DAYS=7

# CORS
VITE_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:3005

# Debug
VITE_DEBUG_ENABLED=true
VITE_DEBUG_LEVEL=verbose 